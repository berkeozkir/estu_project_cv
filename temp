#include <stdio.h>
#include "dtype.h"

int main() {
    // Create and initialize a WORD32_t value
    WORD32_t data32;
    data32.dataU32 = 0x12345678; // Set 32-bit value

    // Print the full 32-bit value
    printf("Full 32-bit value: 0x%08X\n", data32.dataU32);

    // Print 16-bit halves
    printf("Low 16 bits: 0x%04X\n", data32.low16.dataU16);
    printf("High 16 bits: 0x%04X\n", data32.high16.dataU16);

    // Print bytes
    printf("Low byte of low16: 0x%02X\n", data32.low16.lowByte.dataU8);
    printf("High byte of low16: 0x%02X\n", data32.low16.highByte.dataU8);
    printf("Low byte of high16: 0x%02X\n", data32.high16.lowByte.dataU8);
    printf("High byte of high16: 0x%02X\n", data32.high16.highByte.dataU8);

    // Print bits of lowest byte
    JBIT_t bits = data32.low16.lowByte.bits;
    printf("Bits of lowest byte: %d%d%d%d%d%d%d%d\n",
           bits.bit7, bits.bit6, bits.bit5, bits.bit4,
           bits.bit3, bits.bit2, bits.bit1, bits.bit0);

    return 0;
}